<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.project.Controller">

    <center>
        <Canvas fx:id="canvas" />
    </center>

    <right>
        <VBox spacing="8.0" style="-fx-padding: 8;">
            <children>
                <Button fx:id="buttonAdd" text="Add" onAction="#actionAdd" prefWidth="100.0"/>
                <Button fx:id="buttonClear" text="Clear" onAction="#actionClear" prefWidth="100.0"/>
            </children>
        </VBox>
    </right>
</BorderPane>
